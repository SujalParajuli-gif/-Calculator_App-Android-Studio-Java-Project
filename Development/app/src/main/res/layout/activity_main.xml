<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F4F6F8"
    tools:context=".MainActivity">

    <!-- Display area for showing input and results -->
    <!-- added this display area to show the current number or result -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#343434"
        android:text="0"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="end|center_vertical"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        android:letterSpacing="0.05" />

    <!-- added this vertical layout to contain all calculator buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- Row 1: C, %, ÷, × -->
        <!-- added this row to place clear, percent, divide and multiply buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="4">

            <Button android:id="@+id/btnClear" style="@style/CalcButton" android:text="C" />

            <!-- added this percent button to enable % calculation -->
            <Button android:id="@+id/btnPercent" style="@style/CalcButton" android:text="%" />

            <Button android:id="@+id/btnDivide" style="@style/CalcButton" android:text="÷" />
            <Button android:id="@+id/btnMultiply" style="@style/CalcButton" android:text="×" />
        </LinearLayout>

        <!-- Row 2: 7, 8, 9, - -->
        <!-- added this row for digit buttons and subtraction -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="4">

            <Button android:id="@+id/btn7" style="@style/CalcButton" android:text="7" />
            <Button android:id="@+id/btn8" style="@style/CalcButton" android:text="8" />
            <Button android:id="@+id/btn9" style="@style/CalcButton" android:text="9" />
            <Button android:id="@+id/btnSubtract" style="@style/CalcButton" android:text="-" />
        </LinearLayout>

        <!-- Row 3: 4, 5, 6, + -->
        <!-- added this row for digits and the addition button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="4">

            <Button android:id="@+id/btn4" style="@style/CalcButton" android:text="4" />
            <Button android:id="@+id/btn5" style="@style/CalcButton" android:text="5" />
            <Button android:id="@+id/btn6" style="@style/CalcButton" android:text="6" />
            <Button android:id="@+id/btnAdd" style="@style/CalcButton" android:text="+" />
        </LinearLayout>

        <!-- Row 4: 1, 2, 3, . -->
        <!-- added this row for lower digits and the decimal button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="4">

            <Button android:id="@+id/btn1" style="@style/CalcButton" android:text="1" />
            <Button android:id="@+id/btn2" style="@style/CalcButton" android:text="2" />
            <Button android:id="@+id/btn3" style="@style/CalcButton" android:text="3" />
            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="25sp"
                android:background="@drawable/btn_background"
                android:textColor="#FFFFFF"
                android:layout_margin="6dp"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Row 5: 0 (wide), = -->
        <!-- added this row for zero and equals button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:text="0"
                android:textSize="22sp"
                android:background="@drawable/btn_background"
                android:textColor="#FFFFFF"
                android:layout_margin="6dp"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="25sp"
                android:background="@drawable/btn_special"
                android:textColor="#FFFFFF"
                android:layout_margin="6dp"
                android:elevation="4dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Student ID display -->
    <!-- added this to show the student ID at the bottom -->
    <TextView
        android:id="@+id/studentIdDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID: 20027187"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#555"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <!-- Divider below Student ID -->
    <!-- added this line to visually separate the bottom section -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
