<resources>
    <!-- Style for general calculator buttons -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White -->
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Style for the Equal button -->
    <style name="CalcButtonSpecial" parent="CalcButton">
        <item name="android:background">@drawable/btn_special</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
